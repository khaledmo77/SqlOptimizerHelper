{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ECommerceSampleDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SqlOptimizer": {
    "SlowQueryThresholdMs": 50,
    "EnableN1Detection": true,
    "EnableIndexAnalysis": true,
    "EnableSlowQueryDetection": true,
    "EnableConsoleOutput": true,
    "EnableJsonReports": true,
    "LogPath": "./logs",
    "N1DetectionThreshold": 3,
    "N1DetectionTimeWindowSeconds": 5,
    "EnableDetailedSqlLogging": true,
    "MaxResultsInMemory": 1000,
    "ApplicationName": "SampleWebApi",
    "Environment": "Development"
  },
  "AllowedHosts": "*"
}
